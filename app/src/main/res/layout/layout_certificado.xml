<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_atividade_inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.chuch.trabalho.Certificado">

    <TextView
        android:id="@+id/textotitulo"
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-46dp"
        android:gravity="center_horizontal"
        android:text="Certificado Dador"
        android:textColor="@color/certificado"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="86dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ceert" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="500dp"
        android:layout_height="232dp"
        android:layout_below="@id/textotitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="336dp"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingLeft="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="50dp"
                android:id="@+id/grupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grupo Sanguíneo:"
                android:paddingBottom="20dp"/>

            <TextView
                android:paddingLeft="50dp"
                android:id="@+id/ndador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nº Dador:"
                android:paddingBottom="20dp"/>

            <TextView
                android:paddingLeft="50dp"
                android:id="@+id/nutente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nº Utente:"
                android:paddingBottom="20dp"/>

            <TextView
                android:paddingLeft="50dp"
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:paddingBottom="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linear"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grupores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/idres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/utres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/nomeres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingBottom="20dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>