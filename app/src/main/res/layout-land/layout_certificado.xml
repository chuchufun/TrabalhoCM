<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_atividade_inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.example.chuch.trabalho.Certificado">

    <TextView
        android:id="@+id/textotitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Certificado Dador"
        android:textColor="@color/certificado"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:src="@drawable/cert"
        />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="591dp"
        android:layout_height="135dp"
        android:layout_below="@id/textotitulo"
        android:layout_marginTop="169dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grupo Sanguíneo:" />

            <TextView
                android:id="@+id/ndador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nº Nacional de dador:" />

            <TextView
                android:id="@+id/nutente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nº de Utente do SNS:" />

            <TextView
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linear"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="// grupo sanguineo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="// numero dador" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="// numero utente" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="// nome" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>